            th.w-5 2016
            th 
            th.tl
            th  
            th 
            th.no-print
        tbody
        each sale in recentSales
          - var trStyle = rowClass(bblCount[sale.bbl].length);
          tr(class=trStyle)
            td.pr3.tl #{sale.bbl}
            td.tl !{sale.googlelink}
            td.tc #{sale.residentialunits}
            td.gray.tc #{sale.uc2007} 
            td.tc #{sale.uc2016}
            td.tc $#{sale.saleprice}
            td.tc $#{sale.ppgsf}
            td #{sale.iso_date}
            td.f7.tl.pr2.pt1.pl2 !{sale.owner}
            td.f7.tc.no-print !{sale.hpdlink} !{sale.bislink} !{sale.acrislink} !{sale.taxlink}
