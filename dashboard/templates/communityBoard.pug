            th.w-8 2016
            th.w-15
            th.w-20 
            th.w-10.no-print
        tbody
        each complaint in hpdComplaints
          - var trStyle = rowClass(bblCount[complaint.bbl].length);
          tr(class=trStyle)
            td.pr3.tl #{complaint.bbl}
            td.tl !{complaint.googlelink}
            td #{complaint.residentialunits}
            td.gray #{complaint.uc2007}
